{
  "name": "perumda-tirta-buleleng",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "format": "prettier --write .",
    "prepare": "husky",
    "prisma": "prisma",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:up": "docker compose up -d mysql",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mysql",
    "db:ps": "docker compose ps",
    "db:seed": "prisma db seed",
    "setup": "npm install && npx prisma generate",
    "setup:passwords": "npx ts-node scripts/generate-hashed-passwords.ts",
    "db:migrate:prod": "npx prisma migrate deploy",
    "docker:up": "docker compose up -d",
    "docker:up:redis": "docker compose --profile with-redis up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.17.1",
    "@upstash/ratelimit": "^2.0.0",
    "@upstash/redis": "^1.34.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "next": "^14.2.5",
    "next-auth": "^4.24.7",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.7.5",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
